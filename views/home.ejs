<h1><%= title %></h1>

<section id="feed-posts">
        <h4>Posts</h4>
        <%if(locals.user){ %>
                <form action="/posts/create" id="new-post-form" method="POST">
                        <textarea name="content" cols="30" rows="3" id="input-space" placeholder="Type here..." required></textarea>
                        <input type="submit" value="Post" id="btn1">
                </form> 
        <% }%>
        
        <div id="posts-list-container">
                <ul>   
                        <% for(post of posts){ %>
                                <%- include('_post'); %>
                        <% }%>
                </ul>
        </div>
</section>

<aside id="user-friends">
        <h4>Friends</h4>
        <%for(let u of all_users){%>  
                <p>
                        <a href="/users/profile/<%= u.id %>"> <%= u.name %></a>
                </p>
        <%}%>
        </aside>

<script src="/JS/home_post.js"></script>